<div class="box pb-0">
  <article class="media">
    <figure class="media-left">
      <p class="image is-64x64">
        <%= image_tag outgoing_friend_request.requestee.avatar, class: "is-rounded" %>
      </p>
    </figure>
    <div class="media-content">
      <h5><%= link_to outgoing_friend_request.requestee.username, outgoing_friend_request.requestee, class: "has-text-dark" %></h5>
      <%= button_to "Cancel", friend_request_path(outgoing_friend_request), method: :delete, data: { turbo_method: :delete }, class: "button is-light" %>
    </div>
  </article>
</div>