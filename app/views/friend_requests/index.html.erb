<div class="columns is-gapless">
  <div class="column"></div>
  <div class="column">
    <div class="content">
      <h2>Incoming Friend Requests</h2>
      <% if @incoming_friend_requests.exists? %>
        <%= render partial: 'incoming_friend_request', collection: @incoming_friend_requests %>
      <% else %>
        No incoming friend requests
      <% end %>
    </div>
    <div class="content">
      <h2>Pending Friend Requests</h2>
      <% if @outgoing_friend_requests.exists? %>
        <%= render partial: 'outgoing_friend_request', collection: @outgoing_friend_requests %>
      <% else %>
        No pending friend requests
      <% end %>
    </div>
  </div>
  <div class="column"></div>
</div>