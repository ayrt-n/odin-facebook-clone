<%= form_with model: @user do |form| %>
  <%= render "devise/shared/error_messages", resource: @user %>
  <div class="field">
    <%= form.label :username, class: "label" %>
    <div class="control">
      <%= form.text_field :username, class: "input" %>
    </div>
  </div>
  <div class="field">
    <%= form.label :bio, class: "label" %>
    <div class="control">
      <%= form.text_area :bio, class: "textarea" %>
    </div>
  </div>
  <div class="file has-name mb-3" data-controller="upload">
    <%= form.label :avatar, class: "file-label" do %>
      <%= form.file_field :avatar, class: "file-input", data: { action: "change->upload#display", upload_target: "input" } %>
      <span class="file-cta">
        <span class="file-icon">
          <i class="fas fa-upload"></i>
        </span>
        <span class="file-label">
          Change avatar...
        </span>
      </span>
      <span class="file-name" data-upload-target="output">
        No file selected.
      </span>
    <% end %>
  </div>
  <div class="field">
    <div class="control">
      <%= form.submit class: "button is-link" %>
    </div>
  </div>
<% end %>